---
import { Image } from 'astro:assets';
import image1 from '../assets/images/0001.webp';
import image2 from '../assets/images/0002.webp';
import image3 from '../assets/images/0003.webp';
import image4 from '../assets/images/0004.webp';
import image5 from '../assets/images/cat-poly-cam.jpeg';
---

<div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
  <div class="grid grid-cols-2 grid-rows-2 gap-4">
    <Image
      src={image1}
      alt={'image'}
      class={'rounded-xl'}
    />
    <Image
      src={image2}
      alt={'image'}
      class={'rounded-xl'}
    />
    <Image
      src={image3}
      alt={'image'}
      class={'rounded-xl'}
    />
    <Image
      src={image4}
      alt={'image'}
      class={'rounded-xl'}
    />
  </div>
  <Image
    src={image5}
    alt={'image'}
    class={'rounded-xl'}
  />
</div>
